<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/layout_sub">

        <TextView
            android:layout_width="40dp"
            android:layout_height="78dp"
            android:id="@+id/sets"
            android:inputType="number"
            android:layout_below="@+id/setView"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:textIsSelectable="false"
            android:textColor="#000000" />

        <TextView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/minWorkTime"
            android:layout_below="@+id/workView"
            android:layout_alignLeft="@+id/workView"
            android:layout_alignStart="@+id/workView"
            android:textSize="30dp"
            android:textColor="#000000" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/secWorkTime"
        android:layout_below="@+id/workView"
        android:layout_alignRight="@+id/workView"
        android:layout_alignEnd="@+id/workView"
        android:textColor="#FF000000"
        android:textSize="30dp" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/minRestTime"
        android:textColor="#FF000000"
        android:textSize="30dp"
        android:layout_below="@+id/restView"
        android:layout_toLeftOf="@+id/sets"
        android:layout_toStartOf="@+id/sets" />

    <TextView
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/secRestTime"
        android:textColor="#FF000000"
        android:textSize="30dp"
        android:layout_below="@+id/restView"
        android:layout_toRightOf="@+id/setView"
        android:layout_toEndOf="@+id/setView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sets"
        android:id="@+id/setView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Work Interval"
        android:id="@+id/workView"
        android:textSize="20dp"
        android:textColor="#FF000000"
        android:layout_below="@+id/sets"
        android:layout_alignRight="@+id/restView"
        android:layout_alignEnd="@+id/restView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:id="@+id/workSeparator"
        android:textColor="#FF000000"
        android:textSize="30dp"
        android:layout_below="@+id/workView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rest Interval"
        android:id="@+id/restView"
        android:textColor="#FF000000"
        android:textSize="20dp"
        android:layout_below="@+id/minWorkTime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:id="@+id/restSeparator"
        android:textColor="#FF000000"
        android:textSize="30dp"
        android:layout_below="@+id/restView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_below="@+id/secRestTime"
        android:layout_toRightOf="@+id/restView"
        android:layout_marginTop="50dp"
        android:src="@drawable/pause"
        android:scaleType="fitXY"
        android:maxHeight="60dp"
        android:adjustViewBounds="true" />

</RelativeLayout>
